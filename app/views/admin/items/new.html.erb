<!-- jumbotron-->
<div class="page-title d-flex" aria-label="Page title" style="background-image: url(img/page-title/shop-pattern.jpg);">
      <div class="container text-left align-self-center">
        <nav aria-label="breadcrumb">

        </nav>
        <h1 class="page-title-heading">Back Office Produits</h1>
      </div>
    </div>

    <!-- Backoffice Items-->
    
    <div class="container">
      <h1 class= "h4 block-title text-center pt-3">Cr√©er une nouveau produit</h1>
        <div class="container-fluid">
          <%= form_tag url_for(action: 'create'), method: "post" do %>
            <div class="row"> 
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Titre </label>
                </div>
                <div class= "col-md-6">
                  <p><%= text_field_tag 'title', @item.title%></p>
                </div>
            </div>
            <div class="row">
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Description </label>
                </div>
                <div class= "col-md-6">
                  <p><%= text_area_tag 'description', @item.description %></p>
                </div>
            </div>
            <div class="row">
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Prix </label>
                </div>
                <div class= "col-md-6">
                  <p><%= number_field_tag 'price', @item.price %></p>
                </div>
            </div>  
            <div class="row">
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Photo </label>
                </div>
                <div class= "col-md-6">
                  <p><%= file_field_tag :catpic %></p>
                     
                </div>                                                        
            </div>

              <!-- Bouton valider-->
        <div class="container">
          <div class="container-fluid">
            <div class="row"> 
              <div class= "col-sm-4"></div>
            <%= submit_tag 'Valider mon nouveau produit', class: "btn btn-primary text-center" %>
              </div>
            </div>
          </div>
            <% end %>
        </div>
    </div>