<!-- jumbotron-->
<div class="page-title d-flex" aria-label="Page title" style="background-image: url(img/page-title/shop-pattern.jpg);">
      <div class="container text-left align-self-center">
        <nav aria-label="breadcrumb">

        </nav>
        <h1 class="page-title-heading">Back Office Utilisateur</h1>
      </div>
    </div>

    <!-- Backoffice Items-->
    
    <div class="container">
      <h1 class= "h4 block-title text-center pt-3">Modifier l'utilisateur</h1>
        <div class="container-fluid">
          <%= form_tag url_for(action: 'update'), method: "put" do %>
            <div class="row"> 
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Pr√©nom </label>
                </div>
                <div class= "col-md-6">
                  <p><%= text_field_tag 'first_name', @user.first_name%></p>
                </div>
            </div>
            <div class="row">
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Nom </label>
                </div>
                <div class= "col-md-6">
                  <p><%= text_field_tag 'last_name', @user.last_name %></p>
                </div>
            </div>
            <div class="row">
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Email </label>
                </div>
                <div class= "col-md-6">
                  <p><%= text_field_tag 'email', @user.email %></p>
                </div>
            </div>  
            <div class="row">
              <div class="col-md-4"></div>
                <div class="col-md-2">
                  <label> Administrateur </label>
                </div>
                <div class= "col-md-6">
                  <p><%= radio_button_tag 'is_admin',true %> Oui</p>
                  <p><%= radio_button_tag 'is_admin',false %> Non</p>
                </div>                                                        
            </div>

              <!-- Bouton valider-->
        <div class="container">
          <div class="container-fluid">
            <div class="row"> 
              <div class= "col-sm-4"></div>
            <%= submit_tag 'Valider mes modifications de l\'utilisateur', class: "btn btn-primary text-center" %>
              </div>
            </div>
          </div>
            <% end %>
        </div>
    </div>

