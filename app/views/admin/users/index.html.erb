<!-- jumbotron-->
<div class="page-title d-flex" aria-label="Page title" style="background-image: url(img/page-title/shop-pattern.jpg);">
      <div class="container text-left align-self-center">
        <nav aria-label="breadcrumb">

        </nav>
        <h1 class="page-title-heading">Back Office Utilisateur</h1>
      </div>
    </div>

    <!-- Backoffice User-->
<section class="container py-5 mb-4">
  <h1 class="h4 block-title text-center pt-3">Les utilisateurs de mon site CatCatsLand</h1>

          <div class="table-responsive">
            <table class= 'table table-striped'>
            <thead>
            <tr class= 'bg-gradient'>
              <th>#</th>
              <th>Prénom</th>
              <th>Nom</th>
              <th>Email</th>
              <th>Date création</th>
              <th>Date modification</th>
              <th>Administateur</th>
              <th>Modifier produit</th>
              <th>Supprimer produit</th>
            </tr>
            </thead>
            <tbody>
            <% @users.each do |users|%>
            <tr>
              <td><%=users.id%></td>
              <td><%=users.first_name%></td>
              <td><%=users.last_name%></td>
              <td><%=users.email%></td>
              <td><%=users.created_at.strftime("%d %B %Y")%></td>
              <td><%=users.updated_at.strftime("%d %B %Y")%></td>
              <td><%=users.is_admin%></td>
              <td><%=link_to 'Editer', edit_admin_user_path(users.id) %></td>
              <td><%=link_to 'Supprimer', admin_user_path(users.id), method: :delete %></td>
            </tr>
              <% end %>
            </table>
      </div>
</div>
</div>
</section>

        <!-- Total utilisateurs-->
        <p class="container py-5 mb-4">
                <strong>Nombre total d'utilisateurs: <%= @users.count %></strong>
        </p>