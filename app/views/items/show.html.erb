
<!-- Page Title-->
<div class="page-title d-flex" aria-label="Page title" style="background-image: url(img/page-title/shop-pattern.jpg);">
  <div class="container text-left align-self-center">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Accueil", root_path %></li>
        <li class="breadcrumb-item"><%= link_to "Magasin", items_path %></li>
      </ol>
    </nav>
    <h1 class="page-title-heading">Page Produit</h1>
  </div>
</div>

<!-- Page Content-->
<div class="container mb-2">
  <div class="row">
    <!-- Product Gallery-->
    <div class="col-md-6 pb-5">
      <div class="product-gallery"><span class="badge badge-success text-md font-weight-normal">En stock</span>
        <%if @item.catpic.attached?%>
          <%= image_tag @item.catpic %>
          <%else%>
          <%= image_tag "cat_1.jpg", alt: "photos de chat" %>
          <%end%>
      </div>
    </div>

    <div class="col-md-6 pb-5">
      <div class="product-meta">
      <i class="far fa-bookmark"> <!--i class="far fa-bookmark fe-icon-bookmark"> -->
      </i><%= link_to @item.title%></div>
      <h2 class="h3 font-weight-bold"><%= @item.title %></h2>
        <h3 class="h4 font-weight-light">
          <%= @item.price %> €
        </h3>
      <p class="text-muted"><%= @item.description %>
      </p>
      <div class="row mt-4"> 
      </div>
      <div class="row align-items-end pb-4">
        <div class="col-sm-4">
          <div class="form-group mb-0">
            <label for="quantity">Quantité</label>
            <select class="form-control" id="quantity">
              <option>1</option>
              <option>2</option>
              <option>3</option>
              <option>4</option>
              <option>5</option>
            </select>
          </div>
        </div>
            <div class="col-sm-8">
              <div class="pt-4 hidden-sm-up"></div>
              <%= link_to(carts_path(@item.id),data: {toast_type: "success", toast_position: "topRight", toast_icon: "fe-icon-check-circle", toast_title: "Product", toast_message: "successfuly added to cart!"}, class: "btn btn-primary btn-block m-0", method: "create") do %>
               <!-- <i class="fe-icon-shopping-cart"></i> -->
                <i class="fas fa-shopping-cart"></i> Ajouter au panier
                <% end %>

              </div>
          </div>

      </div>
    </div>
  </div>
