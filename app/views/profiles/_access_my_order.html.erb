<!-- Order-->
<div class="col-lg-8 pb-5">
  <div class="d-flex justify-content-end pb-3">
    <div class="form-inline">
      <label class="text-muted mr-3" for="order-sort">Trier mes commandes</label>
      <select class="form-control" id="order-sort">
        <option>Toutes</option>
        <option>Livré</option>
        <option>En cours</option>
        <option>Retardé</option>
        <option>Annulé</option>
      </select>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead>
        <tr>
          <th>Commande #</th>
          <th>Date de la commande</th>
          <th>Statut</th>
          <th>Total</th>
        </tr>
      </thead>
      <% current_user.orders.each do |order| %>
      <tbody>
        <tr>
          <td><a class="navi-link" href="#order-details" data-toggle="modal"><%= order.id %></a></td>
          <td><%= order.created_at.strftime("Payé le %m/%d/%Y") %></td>
          <td><span class="badge badge-danger m-0">Canceled</span></td>
          <td><span><%=  order.amount %>€</span></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
<!-- End Order-->